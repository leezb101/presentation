    <style>
      body {
        font-family: 'Noto Sans SC', sans-serif;
      }
      .chart-container {
        position: relative;
        width: 100%;
        max-width: 600px;
        margin: auto;
        height: 350px;
      }
      .nav-link {
        transition: color 0.3s ease;
      }
      .nav-link:hover {
        color: #2563eb;
      }

      /* 流程步骤样式 */
      .flow-step {
        transition: all 0.4s ease-in-out;
      }
      .flow-step.visited .flow-step-icon {
        border-color: #2563eb;
        background-color: #dbeafe;
      }
      .flow-step.active .flow-step-icon {
        transform: translateY(-5px) scale(1.1);
        box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.3),
          0 4px 6px -2px rgba(37, 99, 235, 0.2);
        background-color: #2563eb;
        color: white;
        border-color: #2563eb;
      }
      .flow-step.future {
        opacity: 0.5;
        pointer-events: none;
      }

      /* 动画效果 */
      .fade-in {
        animation: fadeIn 0.8s ease-in-out;
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .slide-in-left {
        animation: slideInLeft 0.5s forwards;
      }
      @keyframes slideInLeft {
        from {
          opacity: 0;
          transform: translateX(-30px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      /* 扫码动画 */
      .scanner-container {
        position: relative;
        width: 128px; /* 8rem */
        height: 128px; /* 8rem */
        border-radius: 0.5rem;
        overflow: hidden;
        border: 2px solid #e5e7eb;
      }
      .scanner-line {
        position: absolute;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, transparent, #3b82f6, transparent);
        box-shadow: 0 0 10px #3b82f6, 0 0 20px #3b82f6;
        animation: scan 3s ease-in-out infinite;
      }
      @keyframes scan {
        0% {
          top: 0%;
        }
        50% {
          top: 100%;
        }
        100% {
          top: 0%;
        }
      }

      /* 进度条 */
      #progress-bar-container {
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 4px; /* 增加粗细 */
        background-color: #dbeafe; /* 进度条底色 */
        transform: translateY(-50%);
        z-index: 0;
      }
      #progress-bar-fill {
        height: 100%;
        background-color: #2563eb; /* 填充颜色 */
        width: 0%; /* 初始宽度为0 */
        transition: width 0.5s ease-in-out;
      }
    </style>
